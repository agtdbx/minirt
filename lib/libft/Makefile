#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#
#%%% CONFIGURATION %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#

MAKEFLAGS	+=	--no-print-directory

.POSIX:
.SILENT:
.DELETE_ON_ERROR:
.SECONDEXPANSION:

#==============================================================================#
#==== GOALS ===================================================================#

NAME		:=	libft.a

#==============================================================================#
#==== DIRECTORIES =============================================================#

SRC			:=	src
BUILD		:=	.build
INCLUDE		:=	include

#==============================================================================#
#==== COMPILATION =============================================================#

CC			:=	clang
CFLAGS		:=	-Wall -Wextra -Werror -O3
CPPFLAGS	:=	-MP -MMD $(addprefix -I,$(INCLUDE))

ifdef DEBUG
CFLAGS		+=	-ggdb3
endif

#==============================================================================#
#==== SOURCES =================================================================#

SRCS		:=	$(sort $(shell fd -g '*.c' -E '*.test.c' $(SRC)))

#==============================================================================#
#==== BUILD FILES =============================================================#

OBJS		:=	$(SRCS:%.c=$(BUILD)/%.o)
DEPS		:=	$(SRCS:%.c=$(BUILD)/%.d)
DIRS		:=	$(sort $(shell dirname $(OBJS)))

#******************************************************************************#
#**** PHONY RULES *************************************************************#

.PHONY:	all				\
		objs			\
		clean fclean re

all: objs $(NAME)

objs:
ifdef OBJS
	$(MAKE) -j$(nproc) $(OBJS)
endif

clean:
	rm -rf $(BUILD)

fclean: clean
	rm -f $(NAME)

re: fclean all

#******************************************************************************#
#**** BUILD RULES *************************************************************#

$(NAME): $(OBJS) | $$(@D)
	$(info $(BLUE)Linking C static library $@$(NOC))
	ar rcs $@ $(OBJS)
	$(info $(GREEN)All done$(NOC))

$(DIRS):
	mkdir -p $@

$(OBJS): $(BUILD)/%.o: %.c | $$(@D)
	$(progress-log)
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

-include $(DEPS)

#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#
#%%%% COLORS %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#

NOC			:=	$(shell printf '\033[0m')
RED			:=	$(shell printf '\033[1m\033[38;5;196m')
BLUE		:=	$(shell printf '\033[1m\033[38;5;33m')
GREEN		:=	$(shell printf '\033[1m\033[38;5;76m')
PURPLE		:=	$(shell printf '\033[1;35m')

#%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#
#%%%% PROGRESS LOG UTILS %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%#

objs: export N		:=	0
objs: export NTOTAL	?=	$(shell make NTOTAL=1 -n $(OBJS) | grep clang | wc -l)

define progress-log =
	$(info [$(words $(N))/$(NTOTAL)] $(PURPLE)Building $< $(NOC))
	$(eval N += 1)
endef
